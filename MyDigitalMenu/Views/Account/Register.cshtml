@model MyDigitalMenu.Models.UserIdentity.Models.Register
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <hr>
    @if (TempData["Control"] != null)
    {

        if (TempData["Control"] == "3")
        {
            <div class="alert alert-success" role="alert">
                <center>
                    <i class="fa fa-exclamation-triangle" @*style="font-size: 48px;"*@></i>&nbsp;&nbsp;
                    <b>Kullanıcınız başarı ile eklenmiştir.</b>
                </center>

            </div>

        }
        else if (TempData["Control"] == "2")
        {
            <div class="alert alert-danger" role="alert">
                <center>
                    <i class="fa fa-exclamation-triangle" @*style="font-size: 48px;"*@></i>&nbsp;&nbsp;
                    <b>Parola bir büyük harf bir küçük harf ve bir sayı içermeli ve en az 8 karakterden oluşmalı.</b>
                </center>

            </div>

        }
        else if (TempData["Control"] == "1")
        {
            <div class="alert alert-danger" role="alert">
                <center>
                    <i class="fa fa-exclamation-triangle" @*style="font-size: 48px;"*@></i>&nbsp;&nbsp;
                    <b>Oluşturmaya çalıştığınız kurum kodu ile bir kullanıcı sistemde kayıtlı.</b>
                </center>

            </div>

        }
        else
        {
            <div class="alert alert-danger" role="alert">
                <center>
                    <i class="fa fa-exclamation-triangle" @*style="font-size: 48px;"*@></i>&nbsp;&nbsp;
                    <b>@ViewBag.KayıtHata1</b>
                </center>
            </div>
        }
    }
    <div class="card shadow mb-4">
        <a href="#dikkat" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="dikkat">
            <h6 class="m-0 font-weight-bold text-danger">Dikkat Edilecek Hususlar</h6>
        </a>
        <div class="collapse" id="dikkat">
            <div class="card-body">
                <ul>
                    <li>Kullanıcı oluşturacağınız kurumun öncelikle kurum türünü seçiniz.</li>
                    <li>Kurum Kodunu giriniz.</li>
                    <li>Kurum adını giriniz.</li>
                    <li>E-posta adresini giriniz.</li>
                    <li>Kurumun paralasını giriniz.</li>
                    <li style="color:red">Parola bir büyük harf bir küçük harf ve bir sayı içermeli ve en az 8 karakterden oluşmalı.</li>
                    <li style="color:red">Şifre oluşturulurken türkçe karaterler kullanılmamalı.</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div>
                <strong class="h4 font-weight-bolder">Yeni Kullanıcı Oluştur</strong><br>
                <p class="lead">
                    Bu sayfa üzerinden yeni kullanıcıları oluşturabilirsiniz. Kullanıcı oluştururken lütfen <a href="#dikkat" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="dikkat">
                        <strong>Dikkat Edilecek Hususlar</strong>
                    </a> kısmını inceleyiniz.
            </div>
        </div>
    </div>
    @*<form> </form>*@
    @Html.ValidationSummary()


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">           
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Kullanıcı Adını Giriniz&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                    </div>
                    @Html.TextBoxFor(i => i.UserName, new { @class = "form-control", required = "required", type = "text" })
                    @*<input type="number" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">*@
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Kurum Adı Giriniz&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                    </div>
                    @Html.TextBoxFor(i => i.CompanyName, new { @class = "form-control", required = "required" })
                    @*<input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">*@
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">E-Posta Adresi Giriniz&nbsp;&nbsp;</span>
                    </div>
                    @Html.TextBoxFor(i => i.Email, new { @class = "form-control", required = "required", type = "email" })
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Telefon Numarası Giriniz&nbsp;&nbsp;</span>
                    </div>
                    @Html.TextBoxFor(i => i.Tel, new { @class = "form-control", required = "required", type = "phone" })
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Adres Giriniz&nbsp;&nbsp;</span>
                    </div>
                    @Html.TextAreaFor(i => i.Adress, new { @class = "form-control", required = "required", type = "email" })
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Parola Girin&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                    </div>
                    @Html.PasswordFor(i => i.Password, new { @class = "form-control", required = "required", type = "password" })
                    @*<input type="password" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">*@
                </div>

              

                <button class="btn btn-success btn-icon-split mt-2 mr-2" type="submit" value="Oluştur">
                    <span class="icon text-white-50">
                        <i class="fa fa-check"></i>
                    </span>
                    <span class="text">Yeni Kullanıcı Oluştur</span>
                </button>

                @*<a href="#" class="btn btn-success btn-icon-split mt-2 mr-2">
            <span class="icon text-white-50">
                <i class="fas fa-check"></i>
            </span>
            <span class="text">Yeni Kullanıcı Oluştur</span>
        </a>*@
                @*<a href="#" class="btn btn-danger btn-icon-split mt-2 ml-2">
            <span class="icon text-white-50">
                <i class="fas fa-trash-restore-alt"></i>
            </span>
            <span class="text">Formu Temizle</span>
        </a>*@
            </div>
        </div>
    }


</div>





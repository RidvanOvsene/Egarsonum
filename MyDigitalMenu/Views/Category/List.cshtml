@using GridMvc.Html
@model IEnumerable<MyDigitalMenu.Models.Category>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout - Manager.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover text-center table-sm">
            <thead>
                <tr style="text-align:left">
                    <th style="text-align: left"><b>Sıra</b></th>
                    <th style="text-align: left"><b>Kategori</b></th>
                    <th colspan="1" style="text-align: left"><b>Düzenle</b></th>
                    <th colspan="1" style="text-align: left"><b>Sil</b></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="text-align: left; color:green">
                        <td style="text-align: left">  @item.CategorySortOrder</td>
                        <td style="text-align: left">  @item.CategoryName</td>
                        <td style="text-align: left">  <button class="btn btn-primary btn-sm" onclick="Edittem(@item.CategoryId)"><span class="fa fa-edit"></span></button></td>
                        <td style="text-align: left">  <button class="btn btn-danger btn-sm" onclick="DeleteItem(@item.CategoryId)"><span class="fa fa-trash"></span></button></td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<script>
    function DeleteItem(id) {
        var url = '/Category/CategoryDelete/' + id + '';
        window.location.href = url;
    }
    function Edittem(id) {
        var url = '/Category/Create/' + id + '';
        window.location.href = url;
    }
</script>

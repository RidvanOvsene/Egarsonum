    }

    .catagories {
        grid-gap: 30px;
        max-width: 960px;
        grid-template-columns: 1fr 1fr;
        grid-auto-rows: 100px;
        grid-auto-flow: row dense;
        max-width: 90%;
        max-height: 50%;
        margin: 0 auto 20px;
        position: relative;
        border-radius: 10px;
        overflow: hidden;
        border-style: outset;
        margin-bottom: 2%;
        height: 30% !important;
    }

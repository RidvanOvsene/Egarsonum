<img src="~/images/arka_plan.png" style="width:auto;height:20% !important ;" />
<div class="center-block row"><img class="logo1 fa-align-center" src="~/images/web_logo.png" /></div>


<div class="row" style="margin-left:5%; margin-top:13px;">
    <div class="col-4">
        <a class="row" href="https://www.instagram.com/saklivadikartepe" target="_blank">
            <img src="https://kokoyakisushi.dijital.menu/img/insta-badge.png" width="150">
        </a>
    </div>
    <div class="col-4">
        <span class="language-options" @*style="margin-top:13px;"*@>
            <b> <a href="/Category/ChangeLanguage?CultureId=1&id=@ViewBag.RestaurantId&TableId=@ViewBag.TableId" style="color:white ;margin-right: 10px; font-weight: bold;">Türkçe</a></b>
            <b> <a href="/Category/ChangeLanguage?CultureId=2&id=@ViewBag.RestaurantId&TableId=@ViewBag.TableId" style="color: white; margin-right: 10px;">English</a></b>
            <b> <a href="/Category/ChangeLanguage?CultureId=3&id=@ViewBag.RestaurantId&TableId=@ViewBag.TableId" style="color: white; margin-right: 10px; ">عربي</a></b>
        </span>
    </div>
</div>
<br />


<div id="_print" style="background-color:#EDF2F7">
    <br />
    @foreach (var product in Model.Category)
    {
        if (Model.Language.FirstOrDefault(x => x.Code == product.Code) != null)
        {
            <div class="catagories col-5  center-block" style="background-color: #79B041; ">
                <a style=" text-align: center; padding-left: 5%; color: white; font-size: 20px; background-image: url(https://localhost:44307/images/arka_plan.png); background-repeat: no-repeat; "
                   class=" !important btn-lg @*btn-block*@ center-block" href="~/Menu/Foods?id=@product.CategoryId&RestaurantId=@ViewBag.RestaurantId&TableId=@ViewBag.TableId">
                    <b style="font-size:3vw">@Model.Language.FirstOrDefault(x => x.Code == product.Code).Text</b>
                </a>
            </div>
        }
        else
        {
            <div class="catagories col-5 center-block" style="background-color: #79B041; height: 54% !important; background-repeat: no-repeat; ">
                <a style="text-align: center; color: white; font-size: 20px; background-image: url(~/FoodImages/arka_plan.png);" class=" !important btn-lg btn-block center-block" href="~/Menu/Foods?id=@product.CategoryId&RestaurantId=@ViewBag.RestaurantId&TableId=@ViewBag.TableId"><b style="font-size:3vw">@product.CategoryName</b></a>
            </div>
        }
    }
</div>

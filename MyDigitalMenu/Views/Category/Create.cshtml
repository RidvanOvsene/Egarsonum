@model MyDigitalMenu.Models.Category
@{
    ViewBag.Title = "Create" +
                "" +
                "ate";
    Layout = "~/Views/Shared/_Layout - Manager.cshtml";

}
@if (Model == null)
{
    <h2>Kategori ekle</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label for="ksayi">Kategori Adı</label>
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", @type = "text", required = "required" } })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="ksayi">Sırası</label>
                        @Html.EditorFor(model => model.CategorySortOrder, new { htmlAttributes = new { @class = "form-control", @type = "number", min = 1, required = "required" } })
                        @Html.ValidationMessageFor(model => model.CategorySortOrder, "", new { @class = "text-danger" })
                    </div>


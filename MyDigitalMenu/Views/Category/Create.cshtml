                            <i class="fa fa-plus"></i>
                        </span>
                        <span class="text">Ekle</span>
                    </button>
                    <div class="form-group">
                        <br />
                        <a href="~/Category/List"><i class="fa fa-arrow-left"></i><b> Geri </b></a>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <h2>Kategori Düzenle</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @using (Html.BeginForm("Edit", "Category", new { Id = Model.CategoryId }, FormMethod.Post, new { enctype = "multipart/form-data" }))
